	<bean id="helloWorldLogic"
		class="vn.edu.fpt.capstone.busReservation.logic.HelloWorldLogicImpl">
		<property name="helloWorldDAO" ref="helloWorldDAO" />
	</bean>
	<!-- *****************define DAO here***************** -->
	<bean id="helloWorldDAO"
		class="vn.edu.fpt.capstone.busReservation.dao.HelloWorldDAOImpl">
		<!-- <property name="sessionFactory" ref="sessionFactory" /> -->
	</bean>
	<bean id="stationDAO" class="vn.edu.fpt.capstone.busReservation.dao.StationDAO">
		<property name="sessionFactory" ref="sessionFactory" />
		<constructor-arg
			value="vn.edu.fpt.capstone.busReservation.dao.bean.StationBean" />
	</bean>
	<bean id="reservationDAO" class="vn.edu.fpt.capstone.busReservation.dao.ReservationDAO">
		<property name="sessionFactory" ref="sessionFactory" />
		<constructor-arg
			value="vn.edu.fpt.capstone.busReservation.dao.bean.ReservationBean" />
	</bean>
	<bean id="tariffDAO" class="vn.edu.fpt.capstone.busReservation.dao.TariffDAO">
		<property name="sessionFactory" ref="sessionFactory" />
		<constructor-arg
			value="vn.edu.fpt.capstone.busReservation.dao.bean.TariffBean" />
	</bean>

	<bean id="routeDAO" class="vn.edu.fpt.capstone.busReservation.dao.RouteDAO">
		<property name="sessionFactory" ref="sessionFactory" />
		<constructor-arg value="vn.edu.fpt.capstone.busReservation.dao.bean.RouteBean" />
	</bean>
	
	<bean id="routeDetailsDAO" class="vn.edu.fpt.capstone.busReservation.dao.RouteDetailsDAO">
		<property name="sessionFactory" ref="sessionFactory" />
		<constructor-arg value="vn.edu.fpt.capstone.busReservation.dao.bean.RouteDetailsBean" />
	</bean>
	
    <bean id="paymentDAO" class="vn.edu.fpt.capstone.busReservation.dao.PaymentDAO">
