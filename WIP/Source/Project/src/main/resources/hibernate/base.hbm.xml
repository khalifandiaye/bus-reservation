			<key column="user_id" />
			<one-to-many class="vn.edu.fpt.capstone.busReservation.dao.bean.ReservationBean" />
		</bag>
	</class>
	<!-- RESERVATION -->
	<class name="vn.edu.fpt.capstone.busReservation.dao.bean.ReservationBean" table="reservation">
