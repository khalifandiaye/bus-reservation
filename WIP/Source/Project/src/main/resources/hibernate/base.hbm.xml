		</composite-id>
		<many-to-one name="startTrip" column="start_trip_id" class="vn.edu.fpt.capstone.busReservation.dao.bean.TripBean" />
		<many-to-one name="endTrip" column="end_trip_id" class="vn.edu.fpt.capstone.busReservation.dao.bean.TripBean" />
		<property name="ticketPrice" column="ticket_price" type="double" />
		<property name="paidAmount" column="paid_amount" type="double" not-null="false" />
		<property name="refundAmount" column="refund_amount" type="double" not-null="false" />
	</class>
	<!-- TARIFF VIEW-->
	<class name="vn.edu.fpt.capstone.busReservation.dao.bean.TariffViewBean" table="tariff_view">
		<id name="id" unsaved-value="0" type="integer">
