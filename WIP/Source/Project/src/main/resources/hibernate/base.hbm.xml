	<class name="vn.edu.fpt.capstone.busReservation.displayModel.SearchResultInfo">
		<id name="busStatusId" type="int" column="bus_status_id">
			<generator class="native" />
		</id>
		<property name="departureCity" column="departure_city" type="string" not-null="true" />
		<property name="departureStation" column="departure_station_name" type="string" not-null="true" />
		<property name="departureStationAddress" column="departure_station_address" type="string" not-null="true" />
