		<property name="bookerLastName" column="booker_last_name" type="string" not-null="true" />
		<property name="phone" type="string" not-null="true" />
		<property name="email" type="string" not-null="true" />
		<bag name="tickets" table="ticket" order-by="id" cascade="save-update">
			<key column="reservation_id" />
			<one-to-many class="vn.edu.fpt.capstone.busReservation.dao.bean.TicketBean" />
		</bag>
		<bag name="payments" inverse="true" order-by="id">
			<key column="reservation_id" />
			<one-to-many class="vn.edu.fpt.capstone.busReservation.dao.bean.PaymentBean" />
		</bag>
	</class>
	<!-- TICKET -->
	<class name="vn.edu.fpt.capstone.busReservation.dao.bean.TicketBean" table="ticket">
		<id name="id" unsaved-value="0" type="integer">
			<generator class="native" />
		</id>
		<many-to-one name="reservation" column="reservation_id" not-null="true" />
