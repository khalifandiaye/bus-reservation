		<property name="fare" column="fare" type="double" not-null="true" />
	</class>
	<sql-query name="callSearchTripsProcedure">
		<return alias="searchResult"
			class="vn.edu.fpt.capstone.busReservation.displayModel.SearchResultInfo">
			<return-property name="busStatusId" column="bus_status_id"/>
        	<return-property name="departureCity" column="departure_city"/>
        	<return-property name="departureStation" column="departure_station_name"/>
        	<return-property name="departureStationAddress" column="departure_station_address"/>
