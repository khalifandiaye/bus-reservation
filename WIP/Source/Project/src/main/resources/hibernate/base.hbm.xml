        	<return-property name="arrivalCity" column="arrival_city"/>
        	<return-property name="arrivalStation" column="arrival_station_name"/>
        	<return-property name="arrivalStationAddress" column="arrival_station_address"/>
        	<return-property name="arrivalTime" column="arrival_time"/>
        	<return-property name="fare" column="fare"/>
        </return>
		<![CDATA[CALL search_trips(:deptCity, :arrvCity, :deptDate, :pssgrNo, :busType);]]>
	</sql-query>

