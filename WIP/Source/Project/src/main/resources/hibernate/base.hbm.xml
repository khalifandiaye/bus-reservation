		</id>
		<many-to-one name="segment" column="segment_id" />
		<many-to-one name="busType" column="bus_type_id" />
		<property name="validFrom" column="valid_from" type="timestamp" not-null="true" />
		<property name="validTo" column="valid_to" type="timestamp" not-null="true" />
		<property name="fare" type="double" not-null="true" />
	</class>
	<!-- ROUTE_TERMINAL VIEW-->
	<class name="vn.edu.fpt.capstone.busReservation.dao.bean.RouteTerminalBean" table="route_terminal">
	    <composite-id>
			<key-many-to-one name="id" column="id" class="vn.edu.fpt.capstone.busReservation.dao.bean.RouteBean" />
		</composite-id>
		<many-to-one name="id" column="id" class="vn.edu.fpt.capstone.busReservation.dao.bean.RouteBean" insert="false" update="false" />
		<many-to-one name="startTerminal" column="start_terminal_id" />
		<many-to-one name="endTerminal" column="end_terminal_id" not-null="false" />
	</class>
	<!-- BUS_FREE_TIME VIEW-->
	<class name="vn.edu.fpt.capstone.busReservation.dao.bean.BusFreeTimeBean" table="bus_free_time">
