			<key-many-to-one name="id" column="id" class="vn.edu.fpt.capstone.busReservation.dao.bean.BusStatusBean" />
		</composite-id>
		<many-to-one name="id" column="id" class="vn.edu.fpt.capstone.busReservation.dao.bean.BusStatusBean" insert="false" update="false" />
		<many-to-one name="bus" column="bus_id" class="vn.edu.fpt.capstone.busReservation.dao.bean.BusBean" />
		<property name="fromDate" column="from_date" type="timestamp" not-null="true" />
		<property name="toDate" column="to_date" type="timestamp" not-null="false" />
		<many-to-one name="station" column="station_id" class="vn.edu.fpt.capstone.busReservation.dao.bean.StationBean" />
	</class>
